<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <meta http-equiv="Cache-Control" content="no-cache, no-store, must-revalidate">
    <meta http-equiv="Pragma" content="no-cache">
    <meta http-equiv="Expires" content="0">
    <title>Book Nexus</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: Arial, sans-serif;
        }

        html, body {
            height: 100%;
        }

        body {
            display: flex;
            flex-direction: column;
            background-color: #f5f5f5;
        }

        .layOne {
            flex: 1 0 auto;
        }

        /* Header */
        header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 15px 30px;
            background-color: #4A3F35;
            color: white;
            position: relative;
        }

        .logo {
            font-size: 24px;
            font-weight: bold;
        }

        nav ul {
            list-style: none;
            display: flex;
        }

            nav ul li {
                margin: 0 15px;
            }

                nav ul li a {
                    color: white;
                    text-decoration: none;
                    font-size: 18px;
                }

        .search-bar {
            display: flex;
            margin-right: 0px;
        }

            .search-bar input {
                padding: 5px;
                border: none;
                border-radius: 5px;
            }

            .search-bar button {
                margin-left: 5px;
                padding: 5px 10px;
                border: none;
                background-color: #E7A977;
                color: white;
                border-radius: 5px;
                cursor: pointer;
            }

        /* Main content */
        main {
            flex: 1;
            padding: 20px;
        }

        /* Footer */
        footer {
            text-align: center;
            padding: 20px;
            background-color: #4A3F35;
            color: white;
            flex-shrink: 0;
        }

        .footer-content {
            max-width: 100%;
            margin: auto;
        }

        .social-links {
            list-style: none;
            display: flex;
            justify-content: center;
            margin-top: 10px;
        }

            .social-links li {
                margin: 0 10px;
            }

            .social-links a {
                color: white;
                text-decoration: none;
            }

        .login-btn {
            text-decoration: none;
            background-color: #E7A977;
            color: white;
            padding: 8px 15px;
            border-radius: 5px;
            font-size: 16px;
            transition: 0.3s;
            position: relative;
            margin-left: 10px;
        }

            .login-btn:hover {
                background-color: #D18A5B;
            }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: Arial, sans-serif;
        }

        .books-header {
            text-align: center;
            margin: 30px 0;
            color: #4A3F35;
        }

        .books-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
            gap: 30px;
            padding: 20px;
        }

        .book-card {
            background: white;
            border-radius: 8px;
            overflow: hidden;
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
            transition: transform 0.3s ease;
        }

            .book-card:hover {
                transform: translateY(-5px);
            }

        .book-image {
            width: 100%;
            height: 300px;
            object-fit: cover;
        }

        .book-details {
            padding: 15px;
        }

        .book-title {
            font-size: 1.2rem;
            margin-bottom: 8px;
            color: #4A3F35;
        }

        .book-author {
            font-size: 0.9rem;
            color: #666;
            margin-bottom: 5px;
        }

        .book-meta {
            font-size: 0.8rem;
            color: #888;
            margin-bottom: 10px;
        }

        .book-description {
            font-size: 0.9rem;
            color: #555;
            margin-top: 10px;
            display: -webkit-box;
            -webkit-line-clamp: 3;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }

        .action-buttons {
            display: flex;
            justify-content: space-between;
            margin-top: 15px;
        }

        .btn {
            padding: 8px 15px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 0.9rem;
        }

        .btn-view {
            background-color: #4A3F35;
            color: white;
        }

        .btn-download {
            background-color: #E7A977;
            color: white;
        }
    </style>
</head>
<body class="layOne">
    <header>
        <div class="logo"><a href="/" style="color:white;text-decoration:none;cursor:pointer;">📚 BookNexus</a></div>
        <a id="lgn" href="/Login" class="login-btn">Login</a>
    </header>


    <main>
        @RenderBody()
    </main>

    <footer>
        <div class="footer-content">
            <p>&copy; 2025 BookNexus. All Rights Reserved.</p>
            <ul class="social-links">
                <li><a href="#">📘 Facebook</a></li>
                <li><a href="#">🐦 Twitter</a></li>
                <li><a href="#">📸 Instagram</a></li>
            </ul>
        </div>
    </footer>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var lgn = document.getElementById("lgn");
            var jwtToken = document.cookie.split('; ').find(row => row.startsWith('jwtToken='));

            if (lgn) {
                if (jwtToken) {
                    lgn.textContent = "Logout";
                    lgn.href = "#";
                }

                lgn.addEventListener("click", function (event) {
                    if (lgn.textContent === "Logout") {
                        event.preventDefault();
                        // Delete the cookie by setting its expiration to a past date
                        document.cookie = "jwtToken=; expires=Thu, 01 Jan 1970 00:00:00 UTC; path=/;";
                        // Redirect to login page
                        window.location.href = "/";
                    }
                });
            }
        });
    </script>
</body>
</html>